<%= form_for @user do |f| %>
  <form role="form">
      <div class= "row">
        <div class="form-group">
          <div class="col-md-4 offset-md-4">
            <%= f.text_field :user_name, :placeholder => "User Name", style: "#{'display:none' if controller.action_name == 'show'}", :class => "form-control" %><br>
          </div>
        </div>
      </div>

      <div class= "row">
        <div class="form-group">
          <div class="col-md-4 offset-md-4">
            <%= f.text_field :email, :placeholder => "Email", style: "#{'display:none' if controller.action_name == 'show'}", :class => "form-control"  %><br>
          </div>
        </div>
      </div>

    <div class= "row">
      <div class="form-group">
        <div class="col-md-4 offset-md-4">
          <%= f.password_field :password, :placeholder => "Password", :class => "form-control"   %><br>
        </div>
      </div>
    </div>

    <div class= "row">
      <div class="form-group">
        <div class="col-md-4 offset-md-4">
          <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation", :class => "form-control"   %>
        </div>
      </div>
    </div>

    <br>
    <% if controller.action_name == 'new' %>
      <p class="button"><%= f.submit 'Sign Up', :class => 'btn btn-primary' %></p>
    <% elsif controller.action_name == 'show' %>
      <p class="button"><%= f.submit 'Change Password', :class => 'btn btn-primary' %></p>
    <% end %>
  </form>
<% end %>
