<table>
    <tr class="user">
        <% if comment.user.present? %>
          <strong><%= comment.user.user_name %></strong>: <%= comment.body %>
        <% else %>
          <strong>User deleted</strong>: <%= comment.body %>
        <% end %>
      </td>
    </tr>

  <% if current_user.present? && current_user.admin? %>
    <tr class="delete">
      <td><%= link_to "Delete", [comment.article, comment], method: :delete, data: {confirm: 'Are you sure?'} %>
      </td>
    </tr>
  <% end %>
</table>
