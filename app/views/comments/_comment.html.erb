<table>
  <tr class="user">
      <% if comment.user %>
        <strong><%= comment.user.user_name %></strong>: <%= comment.body %>
      <% else %>
        <strong>User deleted</strong>: <%= comment.body %>
      <% end %>
  </tr>

  <% if current_user && current_user.admin? %>
    <tr class="delete">
      <td><%= link_to "Delete", [comment.article, comment], method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>
