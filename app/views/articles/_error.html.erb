<div class="container">
  <% if @article.errors.any? %>
    <div class="alert alert-warning fade in">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <h2>
        <%= pluralize(@article.errors.count, "Error") %>:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
