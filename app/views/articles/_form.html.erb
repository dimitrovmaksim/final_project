<div class="container">
  <%= form_for @article do |f| %>

    <% if @article.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@article.errors.count, "error") %> prohibitet this article from being saved:
        </h2>
        <ul>
          <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title, :size=>"58" %>
    </div>

    <div class="field">
      <%= f.label :text %><br>
      <%= f.text_area :text, rows: 10, cols: 60 %>
    </div>

    <div class ="field">
      <%= f.label :image_url %><br>
      <%= f.text_field :image_url, :size=>"58" %>
    </div>

    <div class="field">
      <%= f.label :tag_list, "Tags (separated by commas)" %><br />
      <%= f.text_field :tag_list %>
    </div>
    <hr>

    <div class="action">
      <%= f.submit %><br>
    </div>
  <% end %>
</div>
