<div class="container">
  <div class="row">
    <!-- Blog Post Content Column -->
    <div class="col-lg-8">
      <% cache @article do %>

        <!-- Title -->
        <h1><%= @article.title %></h1>

        <!-- Author -->
        <p class="lead">
            by <%= @article.user.user_name %>
        </p>

        <!-- Date/Time -->
        <p><span class="glyphicon glyphicon-time"></span> <%= @article.created_at.strftime("%b %d, %Y") %></p>

        <!-- Preview Image -->
        <% if @article.image_url.present? %>
          <%= image_tag(@article.image_url, class: "img-responsive", size: "500x250") %>
        <% end %>

        <!-- Post Content -->
        <p class="lead"><%= @article.text %></p>

        <p>
        <% if current_user && current_user.admin? %>
          <%= link_to 'Edit', edit_article_path(@article), :class => "btn btn-sm btn-warning" %>
          <%= link_to 'Delete', article_path(@article), :class => "btn btn-sm btn-danger", method: :delete, data: {confirm: 'Are you sure?'} %>
        <% end %>
        <%= link_to 'Back', articles_path, :class => "btn btn-sm btn-primary" %>
        </p>
        <p>
        <%= render 'comments/form' %>
        </p>
        <p>
        <% if @comments.present? %>
          <%= render @comments %>
        <% else %>
          Be the first to comment!
        <% end %>
        </p>
      <% end %>
    </div>
    <%= render 'articles/sidebar' %>
  </div>
</div>
